<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>loginTestServlet</servlet-name>
        <servlet-class>servlet.LoginTestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginTestServlet</servlet-name>
        <url-pattern>/login_test</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>loginSignupServlet</servlet-name>
        <servlet-class>servlet.LoginSignupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginSignupServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>contactServlet</servlet-name>
        <servlet-class>servlet.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>messageServlet</servlet-name>
        <servlet-class>servlet.MessageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>messageServlet</servlet-name>
        <url-pattern>/message</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>messageServiceServlet</servlet-name>
        <servlet-class>servlet.MessageServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>messageServiceServlet</servlet-name>
        <url-pattern>/message_service</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>querySystemUserIdServlet</servlet-name>
        <servlet-class>servlet.QuerySystemUserIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>querySystemUserIdServlet</servlet-name>
        <url-pattern>/query-id</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addContactServlet</servlet-name>
        <servlet-class>servlet.AddContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addContactServlet</servlet-name>
        <url-pattern>/add_contact</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>updateMessageStatusServlet</servlet-name>
        <servlet-class>servlet.UpdateMessageStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateMessageStatusServlet</servlet-name>
        <url-pattern>/update_message</url-pattern>
    </servlet-mapping>
</web-app>